            <div class="social_Container">
                    <div class="social">
                        <h4 class="comments_Indicator">Leave a Comment</h4>
                         <!-- <span class="post-icons-comments"><i class="far fa-comment"></i><%= mainArticles.comments.length %></span> -->
                            <div id="comment_SectionForm">
                                <form action="/article/<%= mainArticles._id %>/comments" method="POST" >
                                    <div class="ui form ui header">
                                        <div class="field">
                                            <label for="comment"></label>
                                            <textarea id="comment_textArea" type="text" rows="4" cols="50" name="comment[text]"placeholder='Comment' ></textarea>
                                        </div>
                                    </div>
                                    <button id="comment_submitFontSize" class="bttn-material-flat bttn-md bttn-primary">Submit</button>
                                </form>
                            </div>

                   
                      <div class="comments">
                       <% mainArticles.comments.forEach(function(comment){ %>
                          <div class="commentBox_User">
                            <div class="display_grid">
                                <div class="user_info">
                                  <h5 id="comment_AuthorName">@<%= comment.author.username %></h5>
                                  <span><h5 id="comment_AuthorName"><%= moment(comment.createdAt).format('LLL') %></h5></span>
                                </div>
                              <!-- <img src="<%= comment.author.profilePhoto %>" alt=""> -->
                              <div class="comment_text">
                                  <p><%= comment.text%></p>  
                              </div>
                            </div>  
                              
                          <% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.permission === 'SuperAdmin' || currentUser && currentUser.permission === 'Admin' || currentUser && currentUser.permission === 'Moderator') { %>
                              <form id="update_CommentForm" action="/article/<%=mainArticles._id%>/comments/<%= comment._id %>?_method=DELETE" method='POST'>
